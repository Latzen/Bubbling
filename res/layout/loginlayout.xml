<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView android:id="@+id/textId"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:layout_marginTop="2dp"
              android:text="@string/dialog_login_question"
              android:layout_centerHorizontal="true" />
    <TextView android:id="@+id/leaderBoardInfo"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:layout_marginTop="10dp"
              android:layout_below="@id/textId"
              android:text="@string/dialog_login_desc1"
              android:layout_centerHorizontal="true" />
    <TextView android:id="@+id/scoreInfo"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:layout_below="@id/leaderBoardInfo"
              android:text="@string/dialog_login_desc2"
              android:layout_centerHorizontal="true" />
    <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignRight="@id/scoreInfo"
            android:layout_below="@id/scoreInfo"/>
    <Button android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/scoreInfo"
            android:layout_marginTop="10dp"
            android:text="@string/dialog_login_no_button"
            android:layout_below="@id/scoreInfo"/>
    <CheckBox android:id="@+id/doNotShow"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:layout_below="@id/logout"
              android:text="@string/dialog_do_not_show_again"
              android:layout_alignLeft="@id/logout"/>


</RelativeLayout>